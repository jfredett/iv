#!/usr/bin/env bash

source $(dirname `readlink -f $0`)/iv_config

_pid_path() {
  echo -n $(config pid_path)/${1:-$IV_SERVER_NAME}
}

_bin_path() {
  echo -n $(config bin_path)/${1:-$IV_SERVER_NAME}
}

_ii_path() {
  echo -n $(config location)/${1:-$IV_SERVER_NAME}
}

_log_path() {
  echo -n $(config log_path)/${1:-$IV_SERVER_NAME}.log
}

_output_path() {
  echo "$(_ii_path)/out"
}

